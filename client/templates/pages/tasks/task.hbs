<div class="task {{#ifCond task.status '===' 'Done'}}task_done{{/ifCond}}" data-id="{{task.id}}">
    <img class="task__image" src="{{task.thumbnail}}" data-src="data:image/png;base64," alt="Preview">

    <div class="task__group">
        <span class="task__description">{{task.description}}</span>
        <a class="task__title" data-id="{{task.id}}">{{task.title}}</a>
    </div>
    
    <div class="task__buttons">
        {{#ifCond task.status '!==' 'Done'}}
            <a class="task__btn-info button" href="#/task/{{task.id}}">Info</a>
            <a class="task__btn-edit button" href="#/task/{{task.id}}/edit">Edit</a>
        {{/ifCond}}
        <a class="task__btn-remove button">Remove</a>
    </div>
</div>